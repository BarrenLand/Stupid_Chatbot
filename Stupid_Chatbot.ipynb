import time
import datetime

colors = [
    "\033[91m",  # merah
    "\033[92m",  # hijau
    "\033[93m",  # kuning
    "\033[94m",  # biru
    "\033[95m",  # ungu
    "\033[96m",  # cyan
]
reset = "\033[0m"

text = "Selamat datang di ChatBot sederhana saya!"

for i, char in enumerate(text):
    color = colors[i % len(colors)]
    print(color + char + reset, end="", flush=True)
    time.sleep(0.05)

